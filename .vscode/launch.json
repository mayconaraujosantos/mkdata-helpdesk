{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python: Django",
          "type": "python",
          "request": "launch",
          "program": "${workspaceFolder}/manage.py",
          "args": [
              "runserver"
          ],
          "env": {
              "DJANGO_SETTINGS_MODULE": "settings"
          },
          "django": true,
          "justMyCode": true,
          "preLaunchTask": "pipenvShell"
      }
  ],
  "tasks": [
      {
          "label": "pipenvShell",
          "type": "shell",
          "command": "pipenv shell",
          "group": "build",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
      }
  ]
}
